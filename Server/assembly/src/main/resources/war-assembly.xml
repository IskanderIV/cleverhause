<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>dir</id>
    <formats>
        <format>war</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>ru.cleverhause:*</include>
            </includes>
            <excludes>
                <exclude>ru.cleverhause:*assembly*</exclude>
            </excludes>
            <binaries>
                <outputDirectory>WEB-INF/classes</outputDirectory>
                <unpack>true</unpack>
<!--                <unpackOptions>-->
<!--                    <includes>-->
<!--                        <include>*:*application*</include>-->
<!--                    </includes>-->
<!--                    <excludes/>-->
<!--                </unpackOptions>-->
                <includeDependencies>true</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>WEB-INF/lib</outputDirectory>
<!--                        <includes>-->
<!--                            <include>*:*</include>-->
<!--                        </includes>-->
                        <excludes>
                            <exclude>ru.cleverhause:*</exclude>
<!--                            <exclude>*hibernate*:*</exclude>-->
<!--                            <exclude>*spring*:*</exclude>-->
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
<!--                <outputDirectory>WEB-INF</outputDirectory>-->
                <fileSets>
                    <fileSet>
                        <directory>${project.basedir}/src/main/java/webapp/WEB-INF</directory>
                        <outputDirectory>WEB-INF</outputDirectory>
                        <includes>
                            <include>/**/*</include>
                        </includes>
                    </fileSet>
                    <fileSet>
                        <directory>${project.basedir}/src/main/java/webapp/resources</directory>
                        <outputDirectory>/resources</outputDirectory>
                        <includes>
                            <include>/**/*</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>

